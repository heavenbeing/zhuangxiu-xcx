<!--pages/about/about.wxml-->
<view class='about-banner'> 
  <image src='{{imgurl+about.img}}'></image>
</view>
<view class='about-list'>
  <view class='customer-phone'>
    <image src='../../img/telephone-icon.png'></image>
    <text>客服电话 : {{about.mobile}}</text>
  </view>
  <view class='contact-phone'>
    <image src='../../img/contact.png'></image>
    <text>联系电话 : {{about.telephone}}</text>
  </view>
  <view class='address-us'>
    <image src='../../img/address-icon.png'></image>
    <text>公司地址 : {{about.address}}</text>
  </view>
</view>
