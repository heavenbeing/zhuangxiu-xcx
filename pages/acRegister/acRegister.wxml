<!--pages/acRegister/acRegister.wxml-->

<view class='ac-wrapper'>
  <view class='ac-top-cont'>
    <view class='ac-item'>
      <text>活动标题</text>
      <input type='text' value="水木监理只需12元每平方米" focus='true' placeholder='请输入姓名'></input>
    </view>
    <view class='ac-item'>
      <text>活动时间</text>
      <input type='number'  name='mobile' value="2017-10-16至2017-11-11" placeholder='请输入手机'></input>
    </view>
    <view class='ac-item'>
      <text>活动地址</text>
      <input type='text' maxlength='11' name='mobile' value="{{mobile}}" placeholder='请输入手机'></input>
    </view>
  </view>
  <view class='ac-down-cont'>
    <view class='ac-item'>
      <text>姓名</text>
      <input type='text' name='truename' value="{{truename}}" focus='true' placeholder='请输入姓名'></input>
    </view>
    <view class='ac-item'>
      <text>电话</text>
      <input type='number' maxlength='11' name='mobile' value="{{mobile}}" placeholder='请输入手机'></input>
    </view>
    <view class='ac-item'>
      <text>小区名称</text>
      <input type='text' maxlength='11' name='mobile' value="{{mobile}}" placeholder='请输入手机'></input>
    </view>
    <view class='ac-item'>
      <text>拟购产品</text>
      <input type='text'  name='mobile' value="{{mobile}}" placeholder='请输入手机'></input>
    </view>
  </view>
  <button type='primary' form-type='submit'>立即报名</button>
</view>
